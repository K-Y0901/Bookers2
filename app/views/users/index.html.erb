  <div class="row"> 

<div class="col-xs-3">
<div class="left">
  <div class="user-info">
    <%= render 'users/new', user: @user %>
  </div>
  <div class="new-book">
    <%= render 'books/new', book: @book %>
  </div>
  
</div>
</div>


<div class="col-xs-9">
<div class="users-index">
  <h2>Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

