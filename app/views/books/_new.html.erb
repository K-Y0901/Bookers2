<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:book, local:true do |f| %>

<% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>



  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  
  <h4>タグ追加</h4>
    <%= f.label :tag_list, class: "sr-only control-label" %>
    <%= text_field_tag 'book[tag_list]', book.tag_list.join(",") %><br>

  <%= f.submit 'Create Book' %>

<% end %>