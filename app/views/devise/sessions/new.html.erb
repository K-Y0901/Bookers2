<div class="row">
<div class="col-md-3">
<h2>Log in</h2>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>


    <div class="form-group has-icon">
      <!--<label class="control-label sr-only" for="inputEmail">Name</label>-->
      <p>Name</p>
      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
      <!--<span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>-->
    </div>
    <div class="form-group has-icon">
      <!--<label class="control-label sr-only" for="inputPassword">Password</label>-->
      <p>Password</p>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
      <!--<span class="fa fa-lock form-control-icon" aria-hidden="true"></span>-->
    </div>

    <div class="check">
      <input type="checkbox">
      <label>Remember me</label>
    </div>

    <%= f.submit "Log in", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>


<%= render "devise/shared/links" %>
</div>
</div>